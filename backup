EDIT THE CHANGEME STRINGS AND THE IPS

#!/bin/bash
if ping -c 1 192.168.X.X > /dev/null
then
echo "**************************************************" >> /home/CHANGEME/backup.log
date >> /home/CHANGEME/backup.log
rsync -e 'ssh -p 22' -aAXvh --delete --exclude ".*" --exclude "vmware/" --exclude "share/" --exclude "Downloads/" --exclude "VirtualBox*" /home/CHANGEME CHANGEME@192.168.X.X:/hd4/laptop-backup/ >> /home/CHANGEME/backup.log
else
: # left blank on purpose
fi
