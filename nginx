#Docker <https://hub.docker.com/r/marvambass/nginx-ssl-secure>
#

#Guac.conf file located in mapped volume directory

error_log /var/log/nginx/error.log;
access_log /var/log/nginx/access.log;

server {
	listen 443 ssl;
	#ssl on;
        ssl_certificate /etc/nginx/external/cert.pem;
        ssl_certificate_key /etc/nginx/external/key.pem;

	location /guacamole/ {
		proxy_pass http://192.168.0.XX:8080/guacamole/;
   		proxy_buffering off;
   		proxy_http_version 1.1;
    		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    		proxy_set_header Upgrade $http_upgrade;
    		proxy_set_header Connection $http_connection;
    		access_log off;
	}
}
